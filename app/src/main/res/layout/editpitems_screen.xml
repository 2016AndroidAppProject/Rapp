<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#90CAF9"
    tools:context="com.example.nick.rapp.editPracticeItemsController">

    <RelativeLayout tools:context="com.example.nick.rapp.userSetupController"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="#90CAF9" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/relativeLayout4"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/textView16"
            android:layout_toEndOf="@+id/textView16"
            android:layout_marginLeft="46dp"
            android:layout_marginStart="46dp" >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tap to register new user"
                android:id="@+id/button7"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/editText3"
                android:textColor="#000000"
                android:hint="Password"
                android:layout_above="@+id/editText5"
                android:layout_alignLeft="@+id/button7"
                android:imeActionLabel="actionDone"
                android:singleLine="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editText4"
                android:hint="Enter User Name"
                android:focusable="true"
                android:textColor="#000000"
                android:layout_above="@+id/editText3"
                android:layout_alignLeft="@+id/editText3"
                android:layout_alignStart="@+id/editText3"
                android:ems="10"
                android:imeActionLabel="actionDone"
                android:singleLine="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/editText5"
                android:textColor="#000000"
                android:hint="Enter same password"
                android:layout_above="@+id/button7"
                android:layout_alignLeft="@+id/button7"
                android:layout_alignStart="@+id/button7"
                android:layout_marginBottom="10dp"
                android:imeActionLabel="actionDone"
                android:singleLine="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editText6"
                android:hint="Enter Last Name"
                android:focusable="true"
                android:textColor="#000000"
                android:ems="10"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/editText4"
                android:layout_alignStart="@+id/editText4"
                android:imeActionLabel="actionDone"
                android:singleLine="true" />

            <Spinner
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinner5"
                android:layout_below="@+id/editText6"
                android:layout_centerHorizontal="true"
                android:background="#ffffff" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/relativeLayout5"
            android:layout_alignTop="@+id/textView18"
            android:layout_toRightOf="@+id/textView18"
            android:layout_toEndOf="@+id/textView18">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tap to register new user"
                android:id="@+id/button11"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="212dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/editText7"
                android:textColor="#000000"
                android:hint="Enter new password?"
                android:layout_above="@+id/editText9"
                android:layout_alignLeft="@+id/button11"
                android:imeActionLabel="actionDone"
                android:singleLine="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editText8"
                android:hint="Enter new user name?"
                android:focusable="true"
                android:textColor="#000000"
                android:layout_above="@+id/editText7"
                android:layout_alignLeft="@+id/editText7"
                android:layout_alignStart="@+id/editText7"
                android:ems="10"
                android:imeActionLabel="actionDone"
                android:singleLine="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/editText9"
                android:textColor="#000000"
                android:hint="Enter same password"
                android:layout_above="@+id/button11"
                android:layout_alignLeft="@+id/button11"
                android:layout_alignStart="@+id/button11"
                android:layout_marginBottom="10dp"
                android:imeActionLabel="actionDone"
                android:singleLine="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editText10"
                android:hint="Enter new name?"
                android:focusable="true"
                android:textColor="#000000"
                android:ems="10"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/editText8"
                android:layout_alignStart="@+id/editText8"
                android:imeActionLabel="actionDone"
                android:singleLine="true" />

            <Spinner
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinner6"
                android:layout_below="@+id/editText10"
                android:layout_centerHorizontal="true"
                android:background="#ffffff" />

            <Spinner
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinner7"
                android:background="#ffffff"
                android:layout_above="@+id/editText8"
                android:layout_alignLeft="@+id/spinner6"
                android:layout_alignStart="@+id/spinner6"
                android:layout_marginBottom="30dp" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose user type here:"
            android:id="@+id/textView16"
            android:textSize="25dp"
            android:layout_marginTop="69dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="44dp"
            android:layout_marginStart="44dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="ADD USER"
            android:id="@+id/textView17"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="35dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="EDIT USERS"
            android:id="@+id/textView18"
            android:textSize="35dp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/relativeLayout4"
            android:layout_toEndOf="@+id/relativeLayout4"
            android:layout_marginLeft="52dp"
            android:layout_marginStart="52dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose user to edit:"
            android:id="@+id/textView19"
            android:textSize="25dp"
            android:layout_alignTop="@+id/textView16"
            android:layout_toLeftOf="@+id/relativeLayout5"
            android:layout_toStartOf="@+id/relativeLayout5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change user type?"
            android:id="@+id/textView20"
            android:textSize="25dp"
            android:layout_marginTop="71dp"
            android:layout_below="@+id/textView19"
            android:layout_toLeftOf="@+id/relativeLayout5"
            android:layout_toStartOf="@+id/relativeLayout5" />
    </RelativeLayout>
</RelativeLayout>

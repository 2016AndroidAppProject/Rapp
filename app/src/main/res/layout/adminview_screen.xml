<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nick.ProgressMonitoringTool.adminViewController"
    android:background="#90CAF9">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.33"
            android:weightSum="1">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Administer Receptive Test"
                android:id="@+id/administerReceptiveTest"
                android:textSize="35dp"
                android:padding="20dp"
                android:layout_alignTop="@+id/settingsButton"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_weight=".50" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="STUDENT LIVE VIEW"
                android:id="@+id/studentLiveView"
                android:textSize="35dp"
                android:padding="20dp"
                android:layout_alignTop="@+id/settingsButton"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_weight=".50" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.33"
            android:weightSum="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="RETURN TO LOGIN"
                    android:id="@+id/returnLogin"
                    android:layout_weight="0.10"
                    android:textSize="35dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:padding="15dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="View Raw Data"
                    android:id="@+id/checkDatabase"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.10"
                    android:textSize="35dp"
                    android:padding="35dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Administrator"
                    android:id="@+id/textView18"
                    android:textSize="30dp"
                    android:textStyle="italic"
                    android:layout_alignBaseline="@+id/checkDatabase"
                    android:layout_alignBottom="@+id/checkDatabase"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Menu"
                    android:id="@+id/textView19"
                    android:textSize="30dp"
                    android:textStyle="italic"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="51dp" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_weight="0.33"
            android:weightSum="1">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ADD/EDIT TESTS"
                android:id="@+id/tests"
                android:textSize="35dp"
                android:padding="20dp"
                android:layout_alignTop="@+id/settingsButton"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_weight=".33" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="SETTINGS"
                android:id="@+id/settingsButton"
                android:textSize="35dp"
                android:padding="20dp"
                android:layout_alignTop="@+id/exportResultsButton"
                android:layout_centerHorizontal="true"
                android:layout_weight="0.33" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="EXPORT RESULTS"
                android:id="@+id/exportResultsButton"
                android:textSize="35dp"
                android:padding="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="0.33" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>

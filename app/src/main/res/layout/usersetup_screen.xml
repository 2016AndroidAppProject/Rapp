<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nick.rapp.userSetupController"
    android:background="#90CAF9">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/relativeLayout"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/textView5"
        android:layout_toEndOf="@+id/textView5"
        android:layout_marginLeft="46dp"
        android:layout_marginStart="46dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap to register new user"
            android:id="@+id/addNewUserButton"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/newPasswordField"
            android:textColor="#000000"
            android:hint="Password"
            android:layout_above="@+id/confirmPasswordField"
            android:layout_alignLeft="@+id/addNewUserButton"
            android:imeActionLabel="actionDone"
            android:singleLine="true"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/newUserNameField"
            android:hint="Enter User Name"
            android:focusable="true"
            android:textColor="#000000"
            android:layout_above="@+id/newPasswordField"
            android:layout_alignLeft="@+id/newPasswordField"
            android:layout_alignStart="@+id/newPasswordField"
            android:ems="10"
            android:imeActionLabel="actionDone"
            android:singleLine="true"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/confirmPasswordField"
            android:textColor="#000000"
            android:hint="Enter same password"
            android:layout_above="@+id/addNewUserButton"
            android:layout_alignLeft="@+id/addNewUserButton"
            android:layout_alignStart="@+id/addNewUserButton"
            android:layout_marginBottom="10dp"
            android:imeActionLabel="actionDone"
            android:singleLine="true"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userLastNameField"
            android:hint="Enter Last Name"
            android:focusable="true"
            android:textColor="#000000"
            android:ems="10"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/newUserNameField"
            android:layout_alignStart="@+id/newUserNameField"
            android:imeActionLabel="actionDone"
            android:singleLine="true"/>

        <Spinner
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/userTypeSpinner"
            android:layout_below="@+id/userLastNameField"
            android:layout_centerHorizontal="true"
            android:background="#ffffff" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose user type here:"
        android:id="@+id/textView5"
        android:textSize="25dp"
        android:layout_marginTop="69dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/relativeLayout3"
        android:layout_marginRight="109dp"
        android:layout_marginEnd="109dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap to register new user"
            android:id="@+id/editUserButton"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="212dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editNewPasswordField"
            android:textColor="#000000"
            android:hint="Enter new password?"
            android:layout_above="@+id/editConfirmPasswordField"
            android:layout_alignLeft="@+id/editUserButton"
            android:imeActionLabel="actionDone"
            android:singleLine="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editUserNameField"
            android:hint="Enter new user name?"
            android:focusable="true"
            android:textColor="#000000"
            android:layout_above="@+id/editNewPasswordField"
            android:layout_alignLeft="@+id/editNewPasswordField"
            android:layout_alignStart="@+id/editNewPasswordField"
            android:ems="10"
            android:imeActionLabel="actionDone"
            android:singleLine="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editConfirmPasswordField"
            android:textColor="#000000"
            android:hint="Enter same password"
            android:layout_above="@+id/editUserButton"
            android:layout_alignLeft="@+id/editUserButton"
            android:layout_alignStart="@+id/editUserButton"
            android:layout_marginBottom="10dp"
            android:imeActionLabel="actionDone"
            android:singleLine="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editNewNameField"
            android:hint="Enter new name?"
            android:focusable="true"
            android:textColor="#000000"
            android:ems="10"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/editUserNameField"
            android:layout_alignStart="@+id/editUserNameField"
            android:imeActionLabel="actionDone"
            android:singleLine="true" />

        <Spinner
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/selectUserSpinner"
            android:layout_below="@+id/editNewNameField"
            android:layout_centerHorizontal="true"
            android:background="#ffffff" />

        <Spinner
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner"
            android:background="#ffffff"
            android:layout_above="@+id/editUserNameField"
            android:layout_alignLeft="@+id/selectUserSpinner"
            android:layout_alignStart="@+id/selectUserSpinner"
            android:layout_marginBottom="30dp" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ADD USER"
        android:id="@+id/textView8"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="35dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="EDIT USERS"
        android:id="@+id/textView9"
        android:textSize="35dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/relativeLayout"
        android:layout_toEndOf="@+id/relativeLayout"
        android:layout_marginLeft="52dp"
        android:layout_marginStart="52dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose user to edit:"
        android:id="@+id/textView10"
        android:textSize="25dp"
        android:layout_alignTop="@+id/textView5"
        android:layout_toLeftOf="@+id/relativeLayout3"
        android:layout_toStartOf="@+id/relativeLayout3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change user type?"
        android:id="@+id/textView11"
        android:textSize="25dp"
        android:layout_marginTop="71dp"
        android:layout_below="@+id/textView10"
        android:layout_toLeftOf="@+id/relativeLayout3"
        android:layout_toStartOf="@+id/relativeLayout3" />
</RelativeLayout>

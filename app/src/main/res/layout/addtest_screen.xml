<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nick.ProgressMonitoringTool.addTestController"
    android:background="#90CAF9">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="399dp"
            android:weightSum="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="463dp"
                android:layout_height="match_parent"
                android:weightSum="1">

                <TextView
                    android:layout_width="444dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Choose practice set to be used with new test:"
                    android:id="@+id/textView16"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:layout_alignTop="@+id/radioGroup"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="51dp" />

                <Spinner
                    android:layout_width="386dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/pracItemSpinner"
                    android:layout_below="@+id/textView16"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="#FFFFFF"
                    android:layout_toLeftOf="@+id/addTest"
                    android:layout_toStartOf="@+id/addTest"
                    android:layout_marginBottom="-20dp" />

                <EditText
                    android:layout_width="291dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/newTestNameField"
                    android:hint="Enter name for new test"
                    android:textSize="25dp"
                    android:inputType="text"
                    android:imeOptions="actionDone"
                    android:singleLine="true"
                    android:layout_below="@+id/textView16"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="58dp" />

                <EditText
                    android:layout_width="384dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/newTestDirField"
                    android:hint="Enter name of test assets folder"
                    android:textSize="25dp"
                    android:inputType="text"
                    android:imeOptions="actionDone"
                    android:singleLine="true"
                    android:layout_below="@+id/newTestNameField"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <Button
                    android:layout_width="298dp"
                    android:layout_height="wrap_content"
                    android:text="CREATE NEW TEST"
                    android:id="@+id/addTest"
                    android:padding="25dp"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:layout_below="@+id/newTestDirField"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="0dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="331dp"
                android:layout_height="match_parent"
                android:layout_weight="0.44">

                <RadioGroup
                    android:layout_width="724dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/radioGroup">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Who can access this test?"
                        android:id="@+id/textView13"
                        android:layout_below="@+id/newTestNameField"
                        android:layout_alignLeft="@+id/administratorOnly"
                        android:layout_alignStart="@+id/administratorOnly"
                        android:layout_marginTop="46dp"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Administrators ONLY"
                        android:layout_below="@+id/newTestNameField"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="50dp"
                        android:layout_marginEnd="50dp"
                        android:layout_marginTop="117dp"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:background="#FFFFFF"
                        android:id="@+id/administratorOnly"
                        android:padding="10dp" />

                    <RadioButton
                        android:layout_width="501dp"
                        android:layout_height="73dp"
                        android:text="Administrator AND Teacher"
                        android:layout_marginTop="50dp"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:background="#FFFFFF"
                        android:id="@+id/administratorAndTeacher"
                        android:layout_below="@+id/administratorOnly"
                        android:layout_alignLeft="@+id/administratorOnly"
                        android:layout_alignStart="@+id/administratorOnly"
                        android:layout_alignRight="@+id/administratorOnly"
                        android:layout_alignEnd="@+id/administratorOnly"
                        android:padding="10dp"
                        android:checked="false" />
                </RadioGroup>
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@android:color/black"
            android:layout_above="@+id/confirmDeleteButton"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="40dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="206dp"
            android:id="@+id/linearLayout"
            android:layout_weight="1.95">

            <RelativeLayout
                android:layout_width="396dp"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Choose a test to delete:"
                    android:id="@+id/textView33"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:layout_above="@+id/deleteTestSpinner"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <Spinner
                    android:layout_width="425dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/deleteTestSpinner"
                    android:background="#FFFFFF"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="669dp"
                android:layout_height="match_parent">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CONFIRM DELETE"
                    android:id="@+id/confirmDeleteButton"
                    android:padding="25dp"
                    android:textSize="35dp"
                    android:textStyle="bold"
                    android:layout_alignBottom="@+id/deleteTestButton"
                    android:layout_toRightOf="@+id/deleteTestButton"
                    android:layout_marginLeft="10dp"
                    android:layout_alignTop="@+id/deleteTestButton" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DELETE TEST"
                    android:id="@+id/deleteTestButton"
                    android:padding="25dp"
                    android:textSize="35dp"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>

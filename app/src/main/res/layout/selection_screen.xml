        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BEGIN TEST"
            android:id="@+id/beginButton"
            android:layout_marginBottom="78dp"
            android:onClick="beginTest"
            android:textColor="#000000"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:paddingTop="40dp"
            android:paddingBottom="40dp"
            android:textSize="35dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/teacherSelection"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="77dp">

            <TextView
                android:text="Select a teacher:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:layout_marginLeft="444dp"
                android:layout_marginStart="444dp"
                android:layout_alignBottom="@+id/teacherSpinner"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="center_vertical"
                android:textSize="30dp"
                android:textColor="#030000"
                android:textStyle="bold" />

            <Spinner
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/teacherSpinner"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/textView4"
                android:layout_toEndOf="@+id/textView4"
                android:fadeScrollbars="false"
                android:background="#FFFFFF"
                android:layout_marginLeft="20dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/testSelection"
            android:layout_marginBottom="37dp"
            android:layout_above="@+id/studentSelection"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="50dp">

            <TextView
                android:text="Select a test:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:layout_marginLeft="444dp"
                android:layout_marginStart="444dp"
                android:layout_alignBottom="@+id/testsSpinner"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="center_vertical"
                android:textSize="30dp"
                android:textColor="#030000"
                android:textStyle="bold" />

            <Spinner
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/testsSpinner"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/textView7"
                android:layout_toEndOf="@+id/textView7"
                android:fadeScrollbars="false"
                android:background="#FFFFFF"
                android:layout_marginLeft="20dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="PRACTICE MODE: NO DATA WILL BE STORED"
            android:id="@+id/practiceNotice"
            android:textColor="#fe0303"
            android:textStyle="bold"
            android:textSize="35dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RETAKE TEST"
            android:id="@+id/restartButton"
            android:onClick="beginTest"
            android:textColor="#000000"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:paddingTop="40dp"
            android:paddingBottom="40dp"
            android:textSize="35dp"
            android:layout_alignBottom="@+id/beginButton"
            android:layout_alignLeft="@+id/testSelection"
            android:layout_alignStart="@+id/testSelection" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CONTINUE TEST"
            android:id="@+id/continueButton"
            android:onClick="continueTest"
            android:textColor="#000000"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:paddingTop="40dp"
            android:paddingBottom="40dp"
            android:textSize="35dp"
            android:layout_alignBottom="@+id/beginButton"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="58dp"
            android:layout_marginEnd="58dp" />

    </RelativeLayout>



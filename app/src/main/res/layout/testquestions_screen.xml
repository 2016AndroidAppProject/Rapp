<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="25dp"
    tools:context=".questionsController"
    android:background="#90CAF9"
    android:weightSum="9"
    >


    <!--This layout is part of the view component of the model-view-controller design.-->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RadioGroup
            android:orientation="horizontal"
            android:layout_margin="50dp"
            android:layout_width="match_parent"
            android:layout_height="fill_parent">


        <RadioButton
            android:id="@+id/opt1pic"
            android:orientation="vertical"
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.45"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:onClick="doNothing"
            android:button="@null"

            android:background="@drawable/p1a"></RadioButton>

            <RadioButton
                android:id="@+id/opt2pic"
                android:layout_margin="15dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.45"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:onClick="doNothing"
                android:button="@null"

                android:background="@drawable/p1a"></RadioButton>

            <RadioButton
                android:id="@+id/opt3pic"
                android:orientation="vertical"
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.45"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:onClick="doNothing"
                android:button="@null"

                android:background="@drawable/p1a">
        </RadioButton>

            </RadioGroup>

        <RadioGroup
                android:orientation="horizontal"
                android:layout_margin="50dp"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                >


            <RadioButton
            android:id="@+id/opt1"
            android:scaleType="fitXY"
            android:layout_margin="35dp"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.45"
            android:onClick="answer"
            android:button="@null"
            android:scaleY="0.65"
            />

            <RadioButton
            android:id="@+id/opt2"
            android:scaleType="fitXY"
            android:layout_margin="35dp"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:layout_weight="0.45"
            android:onClick="answer"
            android:button="@null"
            android:scaleY="0.65"
            />

            <RadioButton
            android:id="@+id/opt3"

            android:layout_margin="35dp"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.45"
            android:onClick="answer"
            android:button="@null"
            android:scaleY="0.65"
            android:minHeight="0dp"
            android:minWidth="0dp"
            />


